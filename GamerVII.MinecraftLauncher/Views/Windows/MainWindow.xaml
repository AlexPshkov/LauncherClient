<Window
    x:Class="GamerVII.MinecraftLauncher.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GamerVII.MinecraftLauncher"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:GamerVII.MinecraftLauncher.ViewModels"
    Width="1060"
    Height="680"
    AllowsTransparency="True"
    Background="Transparent"
    PreviewMouseLeftButtonDown="WindowMove"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Border Style="{StaticResource WindowBorderStyle}">
        <Frame Content="{Binding ContentPage}" NavigationUIVisibility="Hidden" />
    </Border>
</Window>
