<UserControl
    x:Class="GamerVII.MinecraftLauncher.Views.Components.ClientListComponent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GamerVII.MinecraftLauncher.Views.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="100"
    mc:Ignorable="d">
    <Grid>
        <Border Style="{StaticResource ClientListBorder}">
            <ListBox
                Background="Transparent"
                BorderBrush="Transparent"
                BorderThickness="0"
                ItemContainerStyle="{StaticResource ClientChooseButton}"
                ItemsSource="{Binding GameClients}"
                ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                ScrollViewer.VerticalScrollBarVisibility="Hidden"
                SelectedItem="{Binding SelectedGameClient}" />

        </Border>
    </Grid>
</UserControl>
